<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightgrey">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bck_btn"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="-50dp"/>
            <TextView
                    android:text="Title: Sample movie"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieTitle"
                    android:layout_marginTop="80dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="30sp"/>
            <TextView
                    android:text="Year: 2020"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieYear"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="30sp"
                    android:layout_marginTop="30dp"
            />
            <TextView
                    android:text="Genres: Action, Adventure, Drama"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieGenres"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp"/>
            <TextView
                    android:text="Director: Peter"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDirector"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="30sp"
                    android:layout_marginTop="30dp"/>
            <TextView
                    android:text="Stars: Brian Tochi, Christopher Probst, Cynthia Ahearn, David H. May, Efrem Bergman, George Cheung, Karen Kim, Loren Avedon, Ron Singer, Steve Adcock"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieStars"
                    android:layout_marginTop="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="30sp"/>
            <TextView
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/errtext"
                    android:textColor="@color/red"
                    android:textSize="24sp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
